---
import IndexContentComponent from "../components/IndexContentComponent.astro";
---

<IndexContentComponent />

<script is:inline>
	try {
		let preferredLanguage = localStorage.getItem("lang");
		if(preferredLanguage){
			window.location.assign(`/${preferredLanguage}`);
		}else{
			preferredLanguage = navigator.language.toLowerCase().includes("en") ? "en" : "es";
			window.location.assign(`/${preferredLanguage}`);
		}
		
	} catch (error) {
		console.log("An error has occurred while obtaining the preferred language");
	}
</script>
