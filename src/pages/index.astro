---
import Layout from "../layouts/Layout.astro";
import OurClients from "../components/OurClients.astro";
---

<Layout>
	<OurClients />
</Layout>

<script is:inline>
	try {
		//Add loader
		const preferredLanguage = localStorage.getItem("lang");
		if(preferredLanguage){
			window.location.assign(`/${preferredLanguage}`);
		}else{
			if (navigator.language.toLowerCase().includes("en")) {
				window.location.assign("/en");
			}
		}
		
	} catch (error) {
		console.log("An error has occurred while obtaining the preferred language");
	}
</script>
