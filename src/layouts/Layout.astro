---                              
import Footer from '../components/Footer.astro'
import '../styles/global.css'  

import { getLangFromUrl } from '../i18n/utils';

import logo from "../assets/brand-logo.svg"
import favIcon from "../assets/favicon.svg"

const lang = getLangFromUrl(Astro.url);
---   
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta property="og:title" content="Evogrowth - Software a tu medida"/>
		<meta property="og:description" content="Somos una empresa comprometida con el crecimiento empresarial de nuestros clientes."/>
		<meta property="og:url" content="https://evogrowth.dev/"/>
		<meta property="og:image" content={logo.src}/>
		<meta property="og:type" content="website"/>
		<link rel="icon" type="image/svg+xml" href={favIcon.src} />
		<meta name="generator" content={Astro.generator} />
		<title>Evogrowth</title>
	</head>
	<body>
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
